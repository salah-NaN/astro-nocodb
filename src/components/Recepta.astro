---
const { nom, img, descripcio, Id } = Astro.props.dades;
//console.log(descripcio)
---


<!-- <div class=" h-[600px] grid content-between border mb-8 w-1/2 p-6 bg-[#EEE5D3]  hover:bg-[#dbd3c2] duration-300 hover:transition-all w-full "> -->
<div class=" flex flex-col overflow-hidden text-ellipsis rounded-top-xl
hover:bg-[#dbd3c2] duration-300 hover:transition-all">

    <img class="w-full h-1/3 object-cover mb-3" src={img} alt="">
    
    <div>
        <h1 class="font-bold text-3xl text-center pb-3 ">{nom}</h1>
    
        <div class="w-full truncate line-clamp-4 text-ellipsis pb-3">
            {descripcio?.replace(/\n/g, '*n*').split('*n*').map(e => <p class="text-[#5b4540] text-lg font-thin">{e}</p>)}
        </div>
        <!-- div de los botones  -->
        <div class="flex flex-row justify-between">
            <a class="text-red-400 mb-2 block px-3 py-2 border-2 border-solid border-red-400" href={"/receptes/eliminar/"+Id}>Eliminar</a>
            <a class="text-green-400 mb-2 block px-3 py-2 border-2 border-solid border-green-400" href={"/receptes/actualizar/"+Id}>Actualizar</a>
        </div>
    </div>


</div>
