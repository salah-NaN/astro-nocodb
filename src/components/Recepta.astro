---
const { nom, img, descripcio, Id } = Astro.props.dades;
//console.log(descripcio)
---


<!-- <div class=" h-[600px] grid content-between border mb-8 w-1/2 p-6 bg-[#EEE5D3]  hover:bg-[#dbd3c2] duration-300 hover:transition-all w-full "> -->
<div class="h-fit relative flex flex-col  px-7 pt-7 mx-10 rounded-2xl
md:h-[800px]
shadow-2xl bg-[#fbded0]/85 hover:bg-[#d2baad]  duration-400 ease-linear hover:transition-all">

    <img class="w-full mb-5 rounded-2xl mx-auto h-1/3 object-cover " src={img} alt="">
    
    <div>
        <h1 class="font-semibold text-4xl text-left mb-4 ">{nom}</h1>
    
        <div class="w-full   pb-3">
            {descripcio?.replace(/\n/g, '*n*').split('*n*').map(e => <p class="text-[#5b4540] text-lg font-thin">{e}</p>)}
        </div>
        <!-- div de los botones  -->
        <div class="  mt-8 mb-3 flex flex-row justify-between">
            <a class=" rounded-md duration-200 hover:transition-all hover:bg-red-800 absolute bottom-0 bg-red-500/70 text-white mb-2 block px-3 py-2 border-2 border-solid border-red-700" href={"/receptes/eliminar/"+Id}>Eliminar</a>
            <a class=" rounded-md duration-200 hover:transition-all hover:bg-green-900 absolute bottom-0 right-7 ml-1/2 bg-green-700/70 text-white mb-2 block px-3 py-2 border-2 border-solid border-green-900" href={"/receptes/actualizar/"+Id}>Editar</a>
        </div>
    </div>


</div>
