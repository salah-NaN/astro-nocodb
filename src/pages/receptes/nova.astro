---
import Layout from "../../layouts/Layout.astro";
import Back from "../../components/Back.astro";

import ReceptesController from '../../classes/ReceptesController';



const receptesController = new ReceptesController();


if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const nom = data.get("nom");
    const foto = data.get("foto");
    const descripcio = data.get("descripcio");
   
    await receptesController.createRecepta(nom, foto, descripcio);

    return Astro.redirect("/");
}
---

<Layout title="Nova recepta">

    <Back />

    <form class="relative" method="post">
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label
                    class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4"
                    for="inline-full-name"
                >
                    Nom
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700"
                    name="nom"
                    type="text"
                />
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label
                    class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4"
                    for="inline-full-name"
                >
                    Foto
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700"
                    name="foto"
                    type="text"
                />
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label
                    class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4"
                    for="inline-full-name"
                >
                    Descripcio
                </label>
            </div>
            <div class="md:w-2/3">
                <textarea
                    class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700"
                    name="descripcio"
                />
            </div>
        </div>
        <button class="text-white bg-[#55cf5d] duration-300 hover:transition-all hover:bg-[#46332f] rounded-full block   mb-9  p-3 right-0">enviar</button>
    </form>
</Layout>
